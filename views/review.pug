extends base

block content 
    .user-view__content
      .user-view__form-container
        h2.heading-secondary.ma-bt-md Tell us what you thought about #{tour.name} tour
        form.form.form-review
          .form__group
            label.form__label(for='review') Review
            input#review.form__input(type='text', placeholder='', required, minlength='5', maxlength='300')
          .form__group.ma-bt-md
            label.form__label(for='email') Rating
            input#rating.form__input(type='number', placeholder='from 1 to 5', required, min='1', max='5', step='0.1'   )
          .form__group.right
            button#review-tour.btn.btn--small.btn--green.btn--send-review(data-tour-id=tour.id) Send review      